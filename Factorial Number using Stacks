#include<stdio.h>

int stack[100]; // stack
int size = 100;	// Tamano del stack
int ptr = -1; // almacenar el Ã­ndice del elemento superior de la pila

// push x al stack
void push(int x) {
	if (ptr == size - 1) {
		printf("Desbordamiento \n");
	}
	else {
		++ptr;
		stack[ptr] = x;
	}
}

//Regresa el elemento top del stack
int top() {
	if (ptr == -1) {
		printf("Underflow \n");
		return -1;
	}
	else {
		return stack[ptr];
	}
}

// Quitar el elemento superior del stock
void pop() {

	if (ptr == -1) {
		printf("UnderFlow \n");
	}
	else {
		--ptr;
	}
}

// Revisa si esta vacio
int peep() {
	if (ptr == -1)
		return 1;
	else
		return 0;
}


int main() {

	int i, n, temp;

	printf("Ingresa un numero: ");
	scanf("%d", &n);

	push(1);
	for (i = 2; i <= n; ++i) {
		temp = top();
		pop();
		push(temp * i);
	}

	printf("Factorial: %d", top());

	return 0;
}
